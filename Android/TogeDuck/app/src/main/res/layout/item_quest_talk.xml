<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_quest_talk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:elevation="2dp"
    tools:background="@color/bts_main300">
    <ImageView
        android:id="@+id/quest_talk_icon_container"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"
        tools:background="@color/blackpink_main200"
        android:src="@drawable/ic_person_white"
        android:padding="11dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="start"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/quest_talk_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_medium"
                android:text="익명의 ㅇㅇㅇ"/>

            <TextView
                android:id="@+id/quest_talk_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_extra_large"
                tools:background="@color/blackpink_sub100"
                tools:text="contesadkfja;lskdfj;laskdjflskdjflskdjfwoeiruqpwieruqwoperiuqwopeiruqwopeiruqwoeiruqwoieruqowieruqpwoeiruwoeiruwont"
                />
        </LinearLayout>
    </LinearLayout>
