<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shape_square_circle"
    android:gravity="center_vertical"
    android:padding="5dp"
    tools:backgroundTint="@color/red"
    >

    <ImageView
        android:id="@+id/iv_main_icon"
        android:layout_width="@dimen/circle_xsmall"
        android:layout_height="@dimen/circle_xsmall"
        android:src="@drawable/common_cupcake1"
        android:background="@drawable/shape_circle"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OO 카페 가실 분~"
            android:textSize="@dimen/text_large"
            android:textColor="@color/gray_text"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_person_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_person"
                app:tint="@color/gray_text" />

            <TextView
                android:id="@+id/tv_person_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O2/05"
                android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"

                />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="@dimen/circle_xsmall"
        android:layout_height="@dimen/circle_xsmall"
        android:text="참여"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:background="@drawable/shape_circle"
        android:layout_marginEnd="10dp"
        />

    <Chronometer
        android:id="@+id/cm_timer"
        android:layout_width="@dimen/circle_xsmall"
        android:layout_height="@dimen/circle_xsmall"
        android:countDown="true"
        android:gravity="center"
        android:background="@drawable/shape_circle"
        android:textSize="@dimen/text_small"
        />

</LinearLayout>