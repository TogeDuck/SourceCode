<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/ll_background"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_all_round_20"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exchange_img_cupCake"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/common_cupcake3" />

            <TextView
                android:id="@+id/exchange_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:paddingVertical="8dp"
                android:text="교환 글을 작성해 주세요 !"
                android:textSize="@dimen/text_title_small"/>
        </LinearLayout>

        <!-- 이미지 선택하면 gone으로 -->
        <Button
            android:id="@+id/exchange_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 첨부"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:backgroundTint="@color/bts_main500"/>

        <!-- 이미지 선택하면 visible로-->
        <ImageView
            android:id="@+id/exchange_post_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/common_cupcake3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!-- textCursorDrawable 제작, 수정 -->
            <com.idle.togeduck.util.ClearFocusEditText
                android:id="@+id/et_exchange_input"
                android:layout_width="200dp"
                android:layout_height="@dimen/circle_xsmall"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="제목을 입력하세요"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/text_large"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/ll_exchange_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <NumberPicker
                    android:id="@+id/np_exchange_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="제한 시간 (분)"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_share_btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_share_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="취소"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_share_post"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btn_share_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="등록"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_share_cancel"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>