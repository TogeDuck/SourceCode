<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.idle.togeduck.util.ClearFocusEditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_search"
        android:hint="@string/input_text"
        android:textColor="@color/bts_main_200"
        android:textColorHint="@color/bts_main_200"
        android:background="@drawable/circle_square_shape"
        android:textSize="@dimen/body_medium"
        android:paddingVertical="@dimen/padding_xxsmall"
        android:paddingHorizontal="@dimen/padding_small"
        android:layout_marginEnd="@dimen/padding_small"
        android:maxLines="1"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:inputType="text"
        />

    <ImageButton
        android:id="@+id/ib_search"
        android:layout_width="@dimen/btn_medium"
        android:layout_height="@dimen/btn_medium"
        app:layout_constraintStart_toEndOf="@id/et_search"
        app:layout_constraintTop_toTopOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_search_bottom_appbar"
        app:tint="@color/bts_main_200"
        android:background="@drawable/circle_shape"
        />

</androidx.constraintlayout.widget.ConstraintLayout>