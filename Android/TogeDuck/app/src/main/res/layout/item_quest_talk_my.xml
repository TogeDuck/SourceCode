<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_quest_talk_my"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:elevation="2dp"
    tools:background="@color/bts_main300">
    <ImageView
        android:id="@+id/quest_talk_my_icon_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="3dp"
        tools:background="@color/blackpink_main200"
        />
    <ImageView
        android:id="@+id/quest_talk_icon"
        android:layout_height="20dp"
        android:layout_width="20dp"
        app:layout_constraintTop_toTopOf="@id/quest_talk_my_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/quest_talk_my_icon_container"
        app:layout_constraintStart_toStartOf="@id/quest_talk_my_icon_container"
        app:layout_constraintEnd_toEndOf="@id/quest_talk_my_icon_container"
        android:elevation="5dp"
        android:src="@drawable/ic_person_white"/>
    <TextView
        android:id="@+id/quest_talk_my_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/quest_talk_my_icon_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_title_small"
        android:text="ddddd"/>
    <TextView
        android:id="@+id/quest_talk_my_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/quest_talk_my_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_title_small"
        android:text=" : "
        />
    <TextView
        android:id="@+id/quest_talk_my_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/quest_talk_my_spacer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_title_small"
        android:text="content"/>
</androidx.constraintlayout.widget.ConstraintLayout>