<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatroom_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/seventeen_main300"
    >

    <LinearLayout
        android:id="@+id/chatroom_head_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@color/blackpink_main500"
        >
        <ImageView
            android:id="@+id/chatroom_main_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/common_cupcake1"
            android:background="@drawable/shape_circle"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/chatroom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_title_medium"
            android:textColor="@color/white"
            android:text="test"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatroom_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/chatroom_head_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        tools:background="@color/yellow"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatroom_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:id="@+id/chatroom_input_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/chatroom_input_container"
            app:layout_constraintEnd_toStartOf="@id/chatroom_post"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/shape_square_circle"
            tools:backgroundTint="@color/gray_bg"
            tools:ignore="MissingConstraints">

            <com.idle.togeduck.util.ClearFocusEditText
                android:id="@+id/chatroom_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/circle_xsmall"
                android:hint="채팅 내용을 입력해주세요"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/text_large"
                tools:ignore="RtlSymmetry">
            </com.idle.togeduck.util.ClearFocusEditText>
        </LinearLayout>
        <TextView
            android:id="@+id/chatroom_post"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/circle_xsmall"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/shape_all_round_20"
            android:text="등록"
            android:textSize="@dimen/text_title_small"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/chatroom_input_container"
            app:layout_constraintEnd_toEndOf="@id/chatroom_input_container"
            android:layout_marginEnd="10dp"
            tools:backgroundTint="@color/bts_main500" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>