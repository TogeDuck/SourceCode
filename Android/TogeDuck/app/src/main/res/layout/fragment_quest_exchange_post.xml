<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exchange_post_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/common_cupcake3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- textCursorDrawable 제작, 수정 -->
        <com.idle.togeduck.util.ClearFocusEditText
            android:id="@+id/et_exchange_title"
            android:layout_width="200dp"
            android:layout_height="@dimen/circle_xsmall"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="제목을 입력하세요"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="15dp"
            android:paddingVertical="2dp"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/text_large"
            tools:ignore="RtlSymmetry"/>

        <com.idle.togeduck.util.ClearFocusEditText
            android:id="@+id/et_exchange_content"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="내용을 입력하세요"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="2dp"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/text_large"
            tools:ignore="RtlSymmetry"/>

        <!-- 색 위에랑 똑같게 변경 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="제한 시간을 정해 주세요 (분)"
            android:textColor="@color/gray_bg"/>


        <NumberPicker
            android:id="@+id/np_exchange_duration"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:value="50" />

<!--        <LinearLayout-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="70dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:orientation="horizontal">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_share_btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_share_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="취소"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_share_post"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btn_share_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="등록"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_share_cancel"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--        </LinearLayout>-->
    </LinearLayout>
</LinearLayout>