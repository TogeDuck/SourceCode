<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_quest_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:elevation="2dp"
    >
    <ImageView
        android:id="@+id/share_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="안녕하세요"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/bts_main500"
        />
    <TextView
        android:id="@+id/share_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/share_image"
        app:layout_constraintLeft_toRightOf="@id/share_image"
        app:layout_constraintRight_toLeftOf="@id/share_timer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_title_small"
        tools:text="이대휘 포카 나눔합니다"
        />
    <TextView
        android:id="@+id/share_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/share_title"
        app:layout_constraintLeft_toLeftOf="@id/share_title"
        app:layout_constraintRight_toLeftOf="@id/share_timer"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_large"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="카페 코드의 주석 작은 테이블 위에 올려뒀어요. 다들 즐거운 덕질 되세요"
        />
    <ImageView
        android:id="@+id/share_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        tools:background="@color/bts_sub500"
        />
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/share_timer"
        app:layout_constraintLeft_toLeftOf="@id/share_timer"
        app:layout_constraintTop_toTopOf="@id/share_timer"
        app:layout_constraintBottom_toBottomOf="@id/share_timer"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>