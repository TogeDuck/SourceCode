<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    >

    <ImageView
        android:id="@+id/share_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="안녕하세요"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이대휘 포카 나눔합니다"
        app:layout_constraintTop_toTopOf="@id/share_image"
        app:layout_constraintLeft_toRightOf="@id/share_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="카페 코드의 주석 작은 테이블 위에 올려뒀어요 \n 다들 즐거운 덕질 되세요"
        app:layout_constraintTop_toBottomOf="@id/share_title"
        app:layout_constraintLeft_toLeftOf="@id/share_title"
        />
    <ImageView
        android:id="@+id/share_timer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>