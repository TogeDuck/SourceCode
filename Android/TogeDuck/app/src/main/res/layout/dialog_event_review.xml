<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="180dp"
    android:gravity="center"
    tools:context=".quest.share.view.ShareDialogFragment">

    <LinearLayout
        android:id="@+id/ll_review_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_all_round_20"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/selected_img_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택된 사진"
            android:textSize="@dimen/text_title_small"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/selected_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:src="@drawable/common_cupcake1"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>
