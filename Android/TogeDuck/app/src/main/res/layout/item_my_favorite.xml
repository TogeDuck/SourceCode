<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_my_favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="@dimen/padding_xsmall"
    android:background="@drawable/round_square_shape"
    android:paddingVertical="@dimen/margin_xsmall"
    >

    <ImageView
        android:id="@+id/iv_remove_btn"
        android:layout_width="@dimen/remove_btn"
        android:layout_height="@dimen/remove_btn"
        android:src="@drawable/ic_cancle"
        android:layout_gravity="end"
        />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/my_favorite_icon"
        android:layout_height="@dimen/my_favorite_icon"
        android:src="@drawable/ic_person"
        android:background="@drawable/circle_shape"
        android:padding="@dimen/padding_xxsmall"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ë·”"
        android:textSize="@dimen/body_small"
        android:layout_marginTop="@dimen/margin_xxsmall"
        />

</LinearLayout>