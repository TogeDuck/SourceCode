<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_my_favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="5dp"
    android:background="@drawable/shape_all_round_5"
    android:paddingVertical="5dp"
    >

    <ImageView
        android:id="@+id/iv_remove_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_cancle"
        android:layout_gravity="end"
        />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/circle_medium"
        android:layout_height="@dimen/circle_medium"
        android:src="@drawable/ic_person"
        android:background="@drawable/shape_circle"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ë·”"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/bts_main500"
        android:layout_marginTop="2dp"
        />

</LinearLayout>