<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quest_share_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quest.share.view.QuestShareFragment"
    tools:background="@color/red"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_current_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="현재 진행 중인 나눔"
        />
    <TextView
        android:id="@+id/tv_today_empty_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 진행 중인 나눔 퀘스트가 없습니다"
        android:gravity="center"
        android:paddingVertical="25dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/quest_share_empty"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:background="@color/gray_bg"
        android:text="나눔하실 물건의 사진과 두고가신 위치를 등록해주세요"
        android:layout_marginTop="5dp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quest_share_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="5dp"
        tools:background="@color/yellow"
        />

</LinearLayout>