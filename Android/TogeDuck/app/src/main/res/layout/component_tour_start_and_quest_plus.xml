<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_tour_start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/tour_start_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/bts_main500"
        />

    <TextView
        android:id="@+id/tour_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/tour_start_btn"
        app:layout_constraintLeft_toLeftOf="@id/tour_start_btn"
        app:layout_constraintTop_toTopOf="@id/tour_start_btn"
        app:layout_constraintBottom_toBottomOf="@id/tour_start_btn"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/quest_plus_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        tools:background="@color/bts_sub500"
        />
    <TextView
        android:id="@+id/quest_plus_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/quest_plus_btn"
        app:layout_constraintLeft_toLeftOf="@id/quest_plus_btn"
        app:layout_constraintTop_toTopOf="@id/quest_plus_btn"
        app:layout_constraintBottom_toBottomOf="@id/quest_plus_btn"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>