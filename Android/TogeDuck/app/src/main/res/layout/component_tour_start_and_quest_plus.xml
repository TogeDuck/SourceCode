<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_tour_start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:elevation="10dp">

    <!-- plus 클릭하면 visible로 -->
    <LinearLayout
        android:id="@+id/plus_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/quest_plus_btn"
        app:layout_constraintBottom_toTopOf="@id/quest_plus_btn"
        android:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/plus_exchange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_circle"
            android:src="@drawable/ic_exchange"
            android:elevation="2dp"
            android:scaleType="center"
            tools:background="@color/bts_sub500" />

        <ImageView
            android:id="@+id/plus_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_circle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_share"
            android:elevation="2dp"
            android:scaleType="center"
            tools:background="@color/bts_sub500" />

        <ImageView
            android:id="@+id/plus_recruit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_circle"
            android:src="@drawable/ic_recruit"
            android:elevation="2dp"
            android:scaleType="center"
            tools:background="@color/bts_sub500" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tour_start_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_toggle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/bts_main500"
        />

    <TextView
        android:id="@+id/tour_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투어"
        app:layout_constraintRight_toRightOf="@id/tour_start_btn"
        app:layout_constraintLeft_toLeftOf="@id/tour_start_btn"
        app:layout_constraintTop_toTopOf="@id/tour_start_btn"
        app:layout_constraintBottom_toTopOf="@id/start_text"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작"
        app:layout_constraintRight_toRightOf="@id/tour_start_btn"
        app:layout_constraintLeft_toLeftOf="@id/tour_start_btn"
        app:layout_constraintTop_toBottomOf="@id/tour_text"
        app:layout_constraintBottom_toBottomOf="@id/tour_start_btn"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/quest_plus_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus_toggle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_plus"
        tools:background="@color/bts_sub500"
        />

</androidx.constraintlayout.widget.ConstraintLayout>